<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Control Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_start_streaming"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="Start"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_stop_streaming"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Stop"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_pause_resume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Pause"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_clear_logs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="Clear"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Filter and Search Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/et_tag_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:hint="Filter by tag"
            android:textSize="12sp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:hint="Search logs"
            android:textSize="12sp"
            android:padding="8dp" />

        <Button
            android:id="@+id/btn_toggle_autoscroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Auto"
            android:textSize="10sp"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Level Filter Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_filter_verbose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="2dp"
            android:text="V"
            android:textSize="10sp"
            android:backgroundTint="@android:color/darker_gray" />

        <Button
            android:id="@+id/btn_filter_debug"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="D"
            android:textSize="10sp"
            android:backgroundTint="@android:color/holo_blue_bright" />

        <Button
            android:id="@+id/btn_filter_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="I"
            android:textSize="10sp"
            android:backgroundTint="@android:color/holo_green_light" />

        <Button
            android:id="@+id/btn_filter_warning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="W"
            android:textSize="10sp"
            android:backgroundTint="@android:color/holo_orange_light" />

        <Button
            android:id="@+id/btn_filter_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="E"
            android:textSize="10sp"
            android:backgroundTint="@android:color/holo_red_light" />

        <Button
            android:id="@+id/btn_show_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:text="All"
            android:textSize="10sp"
            android:backgroundTint="@android:color/white" />

    </LinearLayout>

    <!-- Export Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_export_logs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Export Logs"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_log_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Logs: 0"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Logs ListView -->
    <ListView
        android:id="@+id/lv_logs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="1dp"
        android:background="@android:color/black"
        android:padding="4dp" />

</LinearLayout>
