<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:background="@drawable/debug_module_item_background"
    android:padding="16dp"
    android:gravity="center"
    android:elevation="2dp"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/iv_module_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:src="@android:drawable/ic_menu_info_details" />

    <TextView
        android:id="@+id/tv_module_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Module Title"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/tv_module_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Module description"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:ellipsize="end" />

</LinearLayout>
